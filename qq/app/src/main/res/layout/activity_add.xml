<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qq.ADD"
    android:background="@drawable/b111">


    <EditText
        android:id="@+id/class_add_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/money_add_et"
        android:layout_alignStart="@+id/money_add_et"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/zxinglegacy_encode_view"
        app:layout_constraintBottom_toTopOf="@+id/name_add_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/class_add_tv"
        app:layout_constraintTop_toBottomOf="@+id/money_add_et"
        app:layout_constraintVertical_bias="0.54" />

    <EditText
        android:id="@+id/money_add_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_add_et"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/zxinglegacy_encode_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_add_tv" />

    <Button
        android:id="@+id/save_add_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_add_bt"
        android:layout_alignBottom="@+id/cancel_add_bt"
        android:layout_alignStart="@+id/class_add_tv"
        android:text="儲存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_add_tv"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/cancel_add_bt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:text="取消"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/save_add_bt"
        app:layout_constraintTop_toBottomOf="@+id/name_add_et"
        app:layout_constraintVertical_bias="0.757" />

    <TextView
        android:id="@+id/class_add_tv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/class_add_et"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/class_add_et"
        android:layout_marginStart="19dp"
        android:layout_toStartOf="@+id/date_add_tv"
        android:text="類別"
        android:textAlignment="center"
        android:textColorLink="@color/zxinglegacy_encode_view"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_add_tv" />

    <TextView
        android:id="@+id/money_add_tv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/money_add_et"
        android:layout_alignEnd="@+id/name_add_tv"
        android:layout_alignStart="@+id/name_add_tv"
        android:layout_alignTop="@+id/money_add_et"
        android:text="金額"
        android:textAlignment="center"
        android:textColorLink="@color/zxinglegacy_encode_view"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/money_add_et"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_add_tv"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColorLink="@color/zxinglegacy_encode_view"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_add_tv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/name_add_et"
        android:layout_alignEnd="@+id/class_add_tv"
        android:layout_alignStart="@+id/save_add_bt"
        android:layout_alignTop="@+id/name_add_et"
        android:text="名稱"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorLink="@color/zxinglegacy_encode_view"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/name_add_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_add_tv" />

    <EditText
        android:id="@+id/name_add_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money_add_et"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/save_add_bt"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/zxinglegacy_encode_view"
        android:textColorLink="@color/zxinglegacy_encode_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</RelativeLayout>
