<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/icons8_hamburger_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button2"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icons8_bus_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button3"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button2"
        android:layout_marginEnd="24dp"
        android:background="@drawable/icons8_clothes_40"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button4"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="39dp"
        android:background="@drawable/icons8_student_male_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button5"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button2"
        android:background="@drawable/icons8_online_support_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button6"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/button3"
        android:layout_alignTop="@+id/button5"
        android:background="@drawable/icons8_sofa_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button7"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="39dp"
        android:background="@drawable/icons8_doctor_skin_type_1_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button8"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignStart="@+id/button5"
        android:background="@drawable/icons8_cash_in_hand_50"
        android:elevation="24dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="normal" />
</RelativeLayout>
